.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-bottom: 15px;
}

.tag-checkbox {
  display: inline-flex;
  align-items: center;
  .editor-horizontal-row > .image-preview,
  .editor-horizontal-row > .embed-options {
    max-width: 100%;
