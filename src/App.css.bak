/* Atomic Designパターン用のモダンボタンスタイル */
.button {
  border: none;
  padding: 10px 18px;
  border-radius: 8px;
  cursor: pointer;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  font-size: 14px;
  letter-spacing: 0.5px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.primary-button {
  background: linear-gradient(135deg, #4285f4, #3367d6);
  color: white;
}

.secondary-button {
  background: linear-gradient(135deg, #757575, #5c5c5c);
  color: white;
}

.danger-button {
  background: linear-gradient(135deg, #f44336, #d32f2f);
  color: white;
}

.info-button {
  background: linear-gradient(135deg, #17a2b8, #0f7a8a);
  color: white;
}

.primary-button:hover {
  background: linear-gradient(135deg, #3367d6, #2850a7);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
  transform: translateY(-1px);
}

.secondary-button:hover {
  background: linear-gradient(135deg, #636363, #4a4a4a);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
  transform: translateY(-1px);
}

.danger-button:hover {
  background: linear-gradient(135deg, #e53935, #c62828);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
  transform: translateY(-1px);
}

.info-button:hover {
  background: linear-gradient(135deg, #138496, #0a6475);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
  transform: translateY(-1px);
}

.button:disabled {
  background: #e0e0e0;
  color: #9e9e9e;
  cursor: not-allowed;
  box-shadow: none;
  transform: none;
}

/* クローズボタン（✕）のスタイル */
.close-button {
  position: absolute;
  width: 28px;
  height: 28px;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.4);
  color: white;
  border: none;
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  font-weight: normal;
  z-index: 10;
  transition: all 0.2s ease;
  top: 10px;
}

.close-button.position-top-right {
  right: 10px;
}

.close-button.position-top-left {
  left: 10px;
}

.close-button:hover {
  background-color: rgba(220, 53, 69, 0.8);
}

/* ダウンロードボタンのスタイル */
.download-btn {
  position: absolute;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border: none;
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  font-weight: bold;
  padding: 0;
  z-index: 10;
  transition: background-color 0.2s ease;
  user-select: none;
}

.download-btn.position-top-right {
  top: 10px;
  right: 10px;
}

.download-btn.position-top-left {
  top: 10px;
  left: 10px;
}

.download-btn.position-bottom-right {
  bottom: 10px;
  right: 10px;
}

.download-btn.position-bottom-left {
  bottom: 10px;
  left: 10px;
}

.download-icon {
  width: 16px;
  height: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.download-btn:hover {
  background-color: rgba(0, 123, 255, 0.8);
}

/* カラーピッカー関連のスタイル */
.color-picker-container {
  display: flex;
  align-items: center;
  gap: 4px; /* 6pxから4pxに縮小 */
}

.color-picker-container input[type='color'] {
  width: 34px; /* 36pxから34pxに縮小 */
  height: 24px; /* 26pxから24pxに縮小 */
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0;
  cursor: pointer;
}

.color-preset-select {
  padding: 3px 5px; /* パディングを減らす */
  border: 1px solid #ddd;
  border-radius: 4px;
  background-color: #fff;
  font-size: 13px; /* フォントサイズを14pxから13pxに減らす */
  min-width: 95px; /* 100pxから95pxに調整 */
  width: 95px; /* 幅を固定 */
}

.editor-horizontal-row {
  display: flex;
  flex-direction: row;
  gap: 15px; /* 間隔を24pxから15pxにさらに減らす */
  align-items: flex-start;
  justify-content: center;
  margin-bottom: 10px; /* 下部マージンを15pxから10pxに減らす */
  background-color: unset;
  border-radius: unset;
  padding: unset;
}

.editor-horizontal-row > .image-preview {
  flex: 1 1 0;
  min-width: 0;
  max-width: 60%;
}

.editor-horizontal-row > .embed-options {
  flex: 0 0 300px; /* 幅を320pxから300pxに調整 */
  min-width: 220px; /* 最小幅も240pxから220pxに調整 */
  max-width: 340px; /* 最大幅も380pxから340pxに調整 */
  box-sizing: border-box; /* boxSizingを追加してパディングとボーダーを幅に含める */
}

@media (max-width: 900px) {
  .editor-horizontal-row {
    flex-direction: column;
    gap: 8px; /* 間隔を12pxから8pxにさらに減らす */
    align-items: stretch;
  }
  .editor-horizontal-row > .image-preview,
  .editor-horizontal-row > .embed-options {
    max-width: 100%;
    width: 100%;
    margin: 0 auto; /* マージンを追加してセンタリング */
  }
}

