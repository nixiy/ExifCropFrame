.container {
  text-align: center;
  padding: 15px; /* コンテナのパディングも20pxから15pxに減らす */
}

.drop-area {
  border-radius: 8px;
  padding: 20px 15px; /* 上下のパディングをさらに30pxから20pxに、左右も20pxから15pxに減らす */
  text-align: center;
  cursor: pointer;
  margin: 5px auto; /* 上下のマージンを10pxから5pxに減らす */
  max-width: 800px;
  transition: all 0.3s ease;
  background-color: #f8f8f8;
}

.drop-area.dragging {
  background-color: rgba(0, 123, 255, 0.1);
}

.drop-area p {
  font-size: 15px; /* フォントサイズも少し小さく */
  color: #5f6368;
  margin: 6px 0; /* 上下のマージンを10pxから6pxに減らす */
}

.file-input-label {
  background-color: #4285f4;
  color: white;
  padding: 8px 16px; /* パディングを10px 20pxから8px 16pxに減らす */
  border-radius: 2px;
  cursor: pointer;
  display: inline-block;
  margin-top: 6px; /* 上部マージンを10pxから6pxに減らす */
  font-weight: 500;
  transition: all 0.2s ease;
}

.file-input-label:hover {
  background-color: #3367d6;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

.image-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10px; /* 上部マージンを20pxから10pxに減らす */
  width: 100%;
}

.image-preview img {
  max-width: 100%;
  max-height: 500px;
  margin-bottom: 15px; /* 下部マージンを20pxから15pxに減らす */
}

/* 画像情報モジュール関連スタイルを削除 */

.button-container {
  display: flex;
  gap: 10px;
  margin-top: 10px;
}

/* クリアボタン用のスタイル削除 */

/* 以下のボタンクラスは削除し、.buttonクラスに統合 */

/* 埋め込みオプション関連のスタイル */
.embed-options {
  width: 100%;
  margin: 6px auto; /* 上下の余白を10pxから6pxに減らす */
  padding: 10px; /* パディングを15pxから10pxに減らす */
  background-color: #ffffff;
  border-radius: 8px;
  text-align: left;
  max-width: 800px;
  box-sizing: border-box;
}

.embed-options h3 {
  margin-top: 0;
  margin-bottom: 10px; /* マージンを15pxから10pxに減らす */
  padding-bottom: 5px; /* パディングを10pxから5pxに減らす */
  color: #333;
}

/* 横並び用のflex行を追加 */
.embed-options .options-row {
  display: flex;
  flex-wrap: wrap;
  gap: 6px; /* 間隔を均一に縮小 */
  margin-bottom: 3px;
  width: 100%;
  justify-content: space-between; /* flex-startからspace-betweenに変更して均等配置 */
}

.option-group {
  margin-bottom: 0;
  min-width: 150px; /* 140pxから150pxに広げて全テキストを表示 */
  display: flex;
  align-items: center;
  flex: 0 1 auto;
  max-width: calc(50% - 5px); /* 横幅のマージンも5pxに縮小 */
  font-size: 0.95em; /* フォントサイズをやや小さく */
}

.option-group label {
  display: inline-block;
  margin-right: 5px; /* 8pxから5pxに縮めて右側のスペースを確保 */
  min-width: 85px; /* 75pxから85pxに広げて完全に表示 */
  white-space: nowrap; /* テキストの折り返しを防止 */
  overflow: visible; /* はみ出しを許可して完全に表示 */
  font-size: 0.93em; /* フォントサイズを少し縮小 */
}

/* レスポンシブ対応: 600px以下は縦並び */
@media (max-width: 600px) {
  .embed-options .options-row {
    flex-direction: column;
    gap: 8px; /* 6pxから8pxに戻す */
  }
  .option-group {
    min-width: 0;
    width: 100%;
    max-width: 100%; /* 最大幅を100%に設定して突き出しを防止 */
    margin-bottom: 8px; /* 6pxから8pxに戻す */
    font-size: 1em; /* フォントサイズを通常に */
  }
  .option-group label {
    min-width: 85px; /* モバイル表示時はラベルをやや広めに */
  }
  .embed-options {
    padding: 10px; /* 8pxから10pxに広げる */
    margin: 8px auto; /* 5pxから8pxに広げる */
  }
}

